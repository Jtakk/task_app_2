<div class="container-fluid">
  <h4>登録済みルーム一覧 (<%= current_user.rooms.count %>件)</h4>
  <table>
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.rooms.each do |room| %>
      <tr>
        <td><%= room.image %></td>
        <td><%= link_to room.name, room_path(room) %></td>
        <td><%= room.introduction %></td>
        <td><%= room.price %></td>
        <td><%= room.created_at %></td>
        <td><%= link_to "編集", edit_room_path(room) %></td>
        <td><%= link_to "削除", room_path(room), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>