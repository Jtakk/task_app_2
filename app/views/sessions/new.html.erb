<div class="container-fluid">
  <div class="login-box">
    <h5 class="mb-3">ログイン</h5>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="row mb-3">
        <div class="col-2 pt-1"><span class="badge bg-danger">必須</span></div>
        <div class="col-10 ps-0"><%= f.email_field :email, placeholder: "メールアドレス", class: "form-control" %></div>
      </div>
      <div class="row mb-4">
        <div class="col-2 pt-1"><span class="badge bg-danger">必須</span></div>
        <div class="col-10 ps-0"><%= f.password_field :password, placeholder: "パスワード", class: "form-control" %></div>
      </div>
      <div class="mb-3"><%= f.submit "ログイン", class: "btn btn-primary w-100" %></div>
      <div><%= link_to "新しいアカウントを作成", signup_path %></div>
    <% end %>
  </div>
</div>