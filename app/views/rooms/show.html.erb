<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @room.image.url %>
      <div class="row">
        <div>
          <% if @room.user.avatar? %>
            <%= image_tag @room.user.avatar.thumb.url %>
          <% else %>
            <%= image_tag 'nc209714.jpeg', class: "avatar-s" %>
          <% end %>
        </div>
        <div>
          <p><%= @room.name %></p>
          <p><%= @room.address %></p>
        </div>
      </div>
      <p><%= @room.introduction %></p>
    </div>
    <div class="col-md-4">
      <div class="flex-column">
        <h4>ルーム予約</h4>
        <h5>¥<%= @room.price %>/日</h5>
        <%= form_with(url: new_reservation_path, method: :get, local: true) do |f| %>
        <%= hidden_field_tag :room_id, @room.id %>
        <%= hidden_field_tag :price, @room.price %>
        <h5><%= f.label :start, "開始日" %></h5>
        <div><%= f.date_field :start, class: "form-control" %></div>
        <h5><%= f.label :end, "終了日" %></h5>
        <div><%= f.date_field :end, class: "form-control" %></div>
        <h5><%= f.label :number, "人数" %></h5>
        <div><%= f.number_field :number, class: "form-control" %></div>
        <div><%= f.submit "予約する", class: "btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>