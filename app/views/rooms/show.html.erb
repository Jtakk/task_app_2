<div class="container">
  <div class="row">
    <!-- 左側 -->
    <div class="col-md-8 p-3">
      <div class="room-box">
        <%= image_tag(@room.image.url, class: "room-img-bg mb-3") %>
        <div class="row mx-2 p-3 border-top border-bottom">
          <div class="col-2 text-center">
            <% if @room.user.avatar? %>
              <%= image_tag @room.user.avatar.thumb.url %>
            <% else %>
              <%= image_tag 'nc209714.jpeg', class: "avatar-s" %>
            <% end %>
          </div>
          <div class="col-10">
            <p class="fw-bold fs-5"><%= @room.name %></p>
            <p><%= @room.address %></p>
          </div>
        </div>
        <div class="row mx-2 p-3 border-bottom mb-3">
          <p><%= @room.introduction %></p>
        </div>
      </div>
    </div>
    <!-- 右側 -->
    <div class="col-md-4 p-3">
      <div class="flex-column border p-3">
        <h4 class="mb-3">ルーム予約</h4>
        <h5 class="mb-4">¥ <%= @room.price %>/日</h5>
        <%= form_with(url: new_reservation_path, method: :get, local: true) do |f| %>
        <%= hidden_field_tag :room_id, @room.id %>
        <%= hidden_field_tag :price, @room.price %>
        <h6><%= f.label :start, "開始日" %></h6>
        <div class="mb-4"><%= f.date_field :start, class: "form-control" %></div>
        <h6><%= f.label :end, "終了日" %></h6>
        <div class="mb-4"><%= f.date_field :end, class: "form-control" %></div>
        <h6><%= f.label :number, "人数" %></h6>
        <div class="mb-4"><%= f.number_field :number, class: "form-control" %></div>
        <div><%= f.submit "予約する", class: "btn btn-primary w-100" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>